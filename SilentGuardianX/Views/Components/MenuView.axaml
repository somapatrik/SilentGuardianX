<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SilentGuardianX.Views.Components.MenuView">
    
    
    <Grid RowDefinitions="Auto,*,Auto" HorizontalAlignment="Center">
        
        <Grid RowDefinitions="Auto,Auto,Auto,Auto">
            <Button Grid.Row="0" Content="Nová skupina" />
            <TextBox Grid.Row="1" Watermark="Název nové skupiny" HorizontalAlignment="Stretch"/>
            <TextBox Grid.Row="2" Watermark="Popis" AcceptsReturn="True" Height="150"/>
            <Grid Grid.Row="3" ColumnDefinitions="*,*">
                <Button Grid.Column="0" Content="Zrušit"/>
                <Button Grid.Column="1" Content="Vytvořit"/>
            </Grid>
        </Grid>        
        
    </Grid>
    
</UserControl>
